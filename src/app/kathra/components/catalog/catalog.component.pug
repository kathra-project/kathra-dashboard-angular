.filters.inline.form
  form.other-filters([formGroup]="licence")
    .source-filters
      .label SOURCES
      .radio.filter
        label Internal
        .checkbox
          input(type="checkbox" formControlName="internal" id="internal", (change)="refreshFilters()")
          label(for="internal")
      .radio.filter
        label External
        .checkbox
          input(type="checkbox" formControlName="external" id="internal", (change)="refreshFilters()")
          label(for="external")

    .flex-filler

    .categories.list((click)="toggleList('categories')").disabled
      .title CATEGORIES
      i.large.angle.down.icon
      .categories.list.content
        .by-char(*ngFor="let catChar of appsCategoriesByChar(true) | asArray")
          .color.bubble([ngClass]="{small: catChar.value == null}")
            .text {{ catChar.key }}
          .category(*ngFor="let cat of catChar.value")
            .name {{ cat }}

    .teams.list.disabled
      .title TEAMS
      i.large.angle.down.icon
      .teams.list.content
        .by-char(*ngFor="let catChar of appsTeamsByChar(true) | asArray")
          .color.bubble([ngClass]="{small: catChar.value == null}")
            .text {{ catChar.key }}
          .category(*ngFor="let cat of catChar.value")
            .name {{ cat }}
  
  .multi-filter
    kathra-filter([filters]="[{values:appsCategories(false), prefix: 'cat'}, {values:teams, prefix: 'team'}]", [placeholder]="'Search & filter the catalog...'", (onFilteringOptsRefresh)="updateFilters($event)")

.catalog-content
  .tabs
    .tab.apps.selected APPLICATIONS
    .splitter
    .disabled.tab.bundles BUNDLES
    .splitter
    .disabled.tab.platforms PLATFORMS

  .drawer.apps
    .filtered.view.cats(*ngIf="displayMode == 'by-cat'")
      .content
        kathra-app(*ngFor="let catalogEntry of catalogEntriesFiltred", [appId]="catalogEntry.providerId", [catalogEntryPackage]="catalogEntry", (click)="loadDetails(catalogEntry)")

  .drawer.bundles(*ngIf="false")
  .drawer.platforms(*ngIf="false")

kathra-modal(id="app-details")
  .modal
    .modal-body
      .modal-closer((click)="modals.close('app-details')")
        i.large.remove.icon
      .modal-header
        .title {{ focusedCatalogEntry?.name }} - {{ focusedCatalogEntryPackageVersion?.version }}
      .catalog-item-content.container
        .infos.row
          .col
            img([src]="focusedCatalogEntry?.icon")
            .buttons
              a.website(target="_blank" href="{{focusedCatalogEntryPackage?.url}}")
                i.eye.icon
                .text Website
              //a.disabled.doc
                i.file.alternate.icon
                .text Documentation
              a.disabled.deploy
                i.cogs.icon
                .text Deploy
          .col.desc
            p {{ focusedCatalogEntry?.description }}
            ngx-md([data]="focusedCatalogEntryPackageVersion?.documentation")
          .col
            .buttons(*ngFor="let pckVersion of focusedCatalogEntryPackage?.versions")
              a.disabled.version(*ngIf="pckVersion.version == focusedCatalogEntryPackageVersion.version")
                i.icon
                .text {{ pckVersion.version }}
              a.version(*ngIf="pckVersion.version != focusedCatalogEntryPackageVersion.version", (click)="loadCatalogEntryPackageVersion(pckVersion)")
                i.icon
                .text {{ pckVersion.version }}
        .row.row
          
  .modal-background